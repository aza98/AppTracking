<%- include('layout/header') %>
<div class="container">
    <h1>Lista de Envíos</h1>
    <div class="table-responsive">
        <table class="table table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Servicio de Paquetería</th>
                    <th>Número de Rastreo</th>
                    <th>Fecha de Envío</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(shipments) && shipments.length > 0) { %> <% shipments.forEach((shipment, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= shipment.parcelService %></td>
                    <td><%= shipment.trackingNumber %></td>
                    <td><%= new Date(shipment.shippingDate).toLocaleDateString() %></td>
                    <td>
                        <a href="/edit/<%= shipment._id %>" class="btn btn-sm btn-outline-success me-1">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/delete/<%= shipment._id %>" class="btn btn-sm btn-outline-danger me-1">
                            <i class="fas fa-trash"></i>
                        </a>
                        <% if (shipment.parcelService === 'DHL') { %>
                        <a href="/api/dhl/track/<%= shipment.trackingNumber %>" class="btn btn-sm btn-outline-info me-1" target="_blank">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <% } else if (shipment.parcelService === '99minutos') { %>
                        <a href="/api/99minutos/track/<%= shipment.trackingNumber %>" class="btn btn-sm btn-outline-info me-1">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <% } %>
                    </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                    <td colspan="5">No hay envíos disponibles</td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include('layout/footer') %>
