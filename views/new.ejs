<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-dark">
                    <h3 class="text-light">Agregar un nuevo envío</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="POST">
                        <div class="mb-3">
                            <label for="parcelService">Servicio de Paquetería:</label>
                            <input type="text" class="form-control" id="parcelService" name="parcelService" required />
                        </div>
                        <div class="mb-3">
                            <label for="trackingNumber">Número de Rastreo:</label>
                            <input type="text" class="form-control" id="trackingNumber" name="trackingNumber" required />
                        </div>
                        <div class="mb-3">
                            <label for="shippingDate">Fecha de Envío:</label>
                            <input type="date" class="form-control" id="shippingDate" name="shippingDate" required />
                        </div>
                        <button type="submit" class="btn btn-dark">Guardar</button>
                    </form>
                    <a href="/" class="btn btn-light">
                        <i class="fas fa-arrow-left"></i> Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
