<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-light">
                    <h3>Agregar un nuevo envío</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post">
                        <div class="mb-3">
                            <label for="parcelService" class="form-label">Servicio de Paquetería:</label>
                            <input type="text" id="parcelService" name="parcelService" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="trackingNumber" class="form-label">Número de Rastreo:</label>
                            <input type="text" id="trackingNumber" name="trackingNumber" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="shippingDate" class="form-label">Fecha de Envío:</label>
                            <input type="date" id="shippingDate" name="shippingDate" class="form-control" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <button type="submit" class="btn btn-dark">Guardar</button>
                        </div>
                    </form>
                    <a href="/" class="btn btn-light mt-2"><i class="fas fa-arrow-left"></i> Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
